{% set showcase_image = page.media.images|first %}
{% if showcase_image %}
	<div class="modular-row showcase header{% if page == page.parent.collection.first %} flush-top{% endif %}" style="background-image: url({{ showcase_image.url }});">
{% else %}
<div class="modular-row showcase header">
{% endif %}
  <div class="container">
      {{ content }}

      {% for button in page.header.buttons %}
          <a class="btn{% if button.primary %} btn-primary{% endif %}" href="{{ base_url_relative }}{{ button.url }}">{{ button.text }}</a>
      {% endfor %}
  </div>
</div>

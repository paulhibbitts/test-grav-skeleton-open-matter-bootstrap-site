<!DOCTYPE html>
<html lang="{{ grav.language.getLanguage ?: 'en' }}">
    <head>
        {% block head %}
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        {% include 'partials/metadata.html.twig' %}
        <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
        <link rel="icon" type="image/png" href="{{ url('theme://images/favicon.png', true) }}" />
        {% block stylesheets %}
            {# load theme.css and custom.css files - hibbittsdesign.org #}
            {% do assets.addCss('theme://css/theme.css',99) %}
            {% do assets.addCss('theme://css/custom.css',100) %}
            {% do assets.add('theme://css/font-awesome.min.css',99) %}
            {% do assets.add('theme://css-compiled/theme.css',98) %}
        {% endblock %}
        {{ assets.css() }}

        {% block javascripts %}
            {% do assets.add('jquery', 102) %}
            {% do assets.add('theme://js/modernizr-custom.js', 101) %}
            {# load custom js - hibbittsdesign.org #}
            {% do assets.addJs('theme://js/my.js', 100) %}

            {% if browser.getBrowser == 'msie' and browser.getVersion >= 8 and browser.getVersion <= 9 %}
                {% do assets.add('https://oss.maxcdn.com/respond/1.4.2/respond.min.js') %}
                {% do assets.add('theme://js/html5shiv-printshiv.min.js') %}
            {% endif %}

        {% endblock %}
        {{ assets.js() }}

        {% endblock head%}
    </head>

    <body class="{% block body_classes %}{{ page.header.body_classes }}{% endblock %}">

        {# check content display flag - hibbittsdesign.org #}
        {% if not (grav.uri.param('chromeless')) and not(theme_var('chromeless.enabled')) %}

          {% if config.plugins.langswitcher.enabled %}
              {% include 'partials/langswitcher.html.twig' %}
          {% endif %}

          {% block header_navigation %}
              {% include 'partials/navigation.html.twig' %}
          {% endblock %}
        {% endif %}

        {% block content %}{% endblock %}
        {% block pagination %}{% endblock %}

        {# check content display flag - hibbittsdesign.org #}
        {% if not (grav.uri.param('chromeless')) and not(theme_var('chromeless.enabled')) %}
          <div class="footer">
              <div class="container">
                {# use footer folder page for content - hibbittsdesign.org #}
                <div class="text-muted">
                  {% set content = pages.find('/footer').content %}
                  {% if content %}
                    {{ content }}
                  {% endif %}
                  </div>
              </div>
          </div>
        {% endif %}

        {% block bottom %}{% endblock %}
    </body>
</html>
